{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["electron.vite.config.ts", "src/main/**/*", "src/shared/**/*"],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "exactOptionalPropertyTypes": false,
    "outDir": "out/main",
    "tsBuildInfoFile": "out/main/.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
